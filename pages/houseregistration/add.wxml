<view class="page">
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{errorMsg}}</view>
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">确认登记人信息</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" name="name" value="{{name}}" placeholder="请输入姓名" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="phone" maxlength="11" value="{{phone}}" type="number" placeholder="请输入手机号" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">身份类型</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="selector" name="type" value="{{idType}}" range="{{types}}" bindchange="settypes" range-key="name">
              <view class="weui-input">{{types[type].name}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">证件类型</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="selector" name="idType" value="{{idType}}" range="{{idTypes}}" bindchange="setidtypes" range-key="name">
              <view class="weui-input">{{idTypes[idType].name}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">证件号码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="idCard" value="{{idCard}}" type="number" placeholder="请输入证件号码" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">房屋编号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="housesId" value="{{housesId}}" type="number" placeholder="请输入房屋编号" />
          </view>
        </view>
      </view>
      <view class="weui-cells__title">备注</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" name="remake" placeholder="更多情况,请输入说明" style="height: 3.3em" />
          </view>
        </view>
      </view>
      <view class='pic-title'>
        <view class='pic-title-content'>
          上传凭证
          <span class='pic-title-content-right'>
            (不超过
            <span class='pic-title-content-right-count'>3</span>
            张)
          </span>
        </view>
      </view>
      <view class='pic-content'>
        <view class="camera" bindtap='uploadImg'>
          <image src="/img/camera.png" class="img"></image>
        </view>
        <block wx:for="{{pics}}" wx:for-item="pic">
          <image class="each-img" src='{{pic}}'>
            <icon class='delete-icon' type="clear" size="40rpx" color="#999999" bindtap='delete_this' data-src="{{pic}}" />
          </image>
        </block>
      </view>
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" formType="submit">确定</button>
      </view>
    </form>
  </view>
</view>